{
  "manifest_version": 3,
  "name": "SafeKid AI Guard",
  "version": "1.0",
  "description": "AI-д суурилсан хүүхдийн интернэт хяналтын систем",
  "permissions": [
    "declarativeNetRequest",
    "tabs",
    "storage",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
